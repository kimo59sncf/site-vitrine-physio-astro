---
import { Heart, Hand, Zap, Waves } from 'lucide-react';
const base = import.meta.env.BASE_URL;

const services = [
  {
    icon: Heart,
    image: base + '/images/cabinet-interieur.webp',
    title: 'Physiothérapie',
    description: 'Traitements adaptés aux douleurs musculo-squelettiques, troubles posturaux, traumatismes et rééducations post-opératoires. Séances personnalisées selon votre condition physique.',
  },
  {
    icon: Hand,
    image: base + '/images/physiotherapie-specialisee.webp',
    title: 'Thérapie manuelle',
    description: 'Techniques spécifiques réalisées à la main pour mobiliser les articulations, réduire les tensions musculaires et restaurer la mobilité.',
  },
  {
    icon: Zap,
    image: base + '/images/massotherapie.webp',
    title: 'Massage médical',
    description: 'Massage thérapeutique ciblé pour soulager les tensions, améliorer la circulation et favoriser la récupération musculaire. Recommandé pour les sportifs, les douleurs chroniques ou le stress intense.',
  },
  {
    icon: Waves,
    image: base + '/images/blessures-sportives.webp',
    title: 'Drainage lymphatique',
    description: 'Technique douce et efficace visant à stimuler la circulation de la lymphe. Idéale pour réduire les œdèmes, améliorer la récupération postopératoire ou soulager les jambes lourdes.',
  },
];
---

<section id="services" class="py-12 md:py-20 bg-light-gray">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-medical-blue mb-4">Nos Services</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Découvrez nos services professionnels de physiothérapie adaptés à vos besoins spécifiques.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service, index) => {
        const IconComponent = service.icon;
        return (
          <div class={`bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-all duration-500 animate-fade-in-up opacity-0`} style={`animation-delay: ${index * 100}ms; animation-fill-mode: forwards;`}>
            <div class="text-center mb-4">
              <div class="relative mb-4">
                <img
                  src={service.image}
                  alt={service.title}
                  class="w-full h-32 object-cover rounded-lg"
                />
                <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-12 h-12 bg-medical-blue rounded-full flex items-center justify-center shadow-lg">
                  <IconComponent size={24} class="text-white" />
                </div>
              </div>
            </div>
            <div class="pt-4">
              <h3 class="text-lg font-bold text-medical-blue mb-2 text-center">{service.title}</h3>
              <p class="text-gray-600 leading-relaxed text-center text-sm">{service.description}</p>
            </div>
          </div>
        );
      })}
    </div>

    <div class="mt-16 text-center">
      <a
        href="#booking"
        class="inline-block bg-medical-blue text-white px-8 py-3 rounded-lg font-bold hover:bg-medical-blue-dark transition-colors shadow-lg"
      >
        Réserver une Consultation
      </a>
    </div>
  </div>
</section>
