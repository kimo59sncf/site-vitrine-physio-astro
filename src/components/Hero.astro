---
import { ArrowRight, Phone } from 'lucide-react';

const slides = [
  {
    image: '/images/cabinet-principal.webp',
    title: 'Cabinet de Physiothérapie à Nyon',
    subtitle: 'Excellence et soin personnalisé avec les méthodes les plus modernes',
    description: 'Notre équipe qualifiée vous accompagne dans votre rééducation avec des méthodes modernes et éprouvées.'
  },
  {
    image: '/images/equipements.webp',
    title: 'Équipements de Dernière Génération',
    subtitle: 'Technologie au service de votre santé',
    description: 'Bénéficiez d\'installations modernes et d\'équipements spécialisés pour une récupération optimale.'
  },
  {
    image: '/images/personnalisés.webp',
    title: 'Soins Personnalisés',
    subtitle: 'Une approche adaptée à chacun',
    description: 'Chaque patient est unique. Nos thérapeutes élaborent des programmes sur mesure pour vos besoins spécifiques.'
  },
  {
    image: '/images/accompagnement.webp',
    title: 'Suivi et Accompagnement',
    subtitle: 'Votre santé, notre priorité',
    description: 'Un suivi régulier et des conseils personnalisés pour maintenir votre bien-être au quotidien.'
  },
  {
    image: '/images/equipe.webp',
    title: 'Expertise et Professionnalisme',
    subtitle: 'Une équipe dédiée à votre rétablissement',
    description: 'Notre cabinet regroupe des professionnels passionnés, formés aux dernières techniques de physiothérapie.'
  }
];
---

<section class="relative h-screen flex flex-col">
  <!-- Diaporama en plein écran -->
  <div class="relative flex-1 overflow-hidden">
    <div id="hero-slideshow" class="flex h-full transition-transform duration-1000 ease-in-out">
      {slides.map((slide, index) => (
        <div class="relative w-full h-full flex-shrink-0 flex flex-col">
          <!-- Image en haut -->
          <div class="relative h-2/3">
            <img
              src={slide.image}
              alt={slide.title}
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-black bg-opacity-20"></div>
          </div>
          <!-- Texte en dessous -->
          <div class="h-1/3 bg-gradient-to-t from-white to-gray-100 flex items-center justify-center p-4 md:p-6">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-xl md:text-3xl lg:text-4xl font-bold text-medical-blue mb-2 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: both;">
                {slide.title}
              </h2>
              <h3 class="text-base md:text-xl font-medium text-gray-700 mb-2 animate-fade-in-up" style="animation-delay: 0.4s; animation-fill-mode: both;">
                {slide.subtitle}
              </h3>
              <p class="text-sm md:text-lg text-gray-600 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 0.6s; animation-fill-mode: both;">
                {slide.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Indicateurs de slide -->
    <div class="absolute bottom-24 left-1/2 transform -translate-x-1/2 flex space-x-3 z-10">
      {slides.map((_, index) => (
        <button
          class={`w-4 h-4 rounded-full transition-all duration-300 ${index === 0 ? 'bg-white scale-125' : 'bg-white bg-opacity-50 hover:bg-opacity-75'}`}
          onclick={`showSlide(${index})`}
        ></button>
      ))}
    </div>

    <!-- Flèches de navigation -->
    <button
      class="absolute left-6 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-full p-3 transition-all duration-300 z-10"
      onclick="prevSlide()"
    >
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button
      class="absolute right-6 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-full p-3 transition-all duration-300 z-10"
      onclick="nextSlide()"
    >
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</section>

<script>
  let currentSlide = 0;
  let slideInterval;
  const slideshow = document.getElementById('hero-slideshow');
  const dots = document.querySelectorAll('[onclick^="showSlide"]');

  function showSlide(index) {
    currentSlide = index;
    slideshow.style.transform = `translateX(-${index * 100}%)`;

    // Update dots
    dots.forEach((dot, i) => {
      if (i === index) {
        dot.classList.remove('bg-white', 'bg-opacity-50', 'hover:bg-opacity-75');
        dot.classList.add('bg-medical-blue', 'scale-125');
      } else {
        dot.classList.remove('bg-medical-blue', 'scale-125');
        dot.classList.add('bg-white', 'bg-opacity-50', 'hover:bg-opacity-75');
      }
    });

    // Reset animations for hero text elements only
    const heroTextElements = document.querySelectorAll('section.relative .animate-fade-in-up');
    heroTextElements.forEach(el => {
      el.style.animation = 'none';
      el.offsetHeight; // Trigger reflow
      el.style.animation = '';
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % dots.length;
    showSlide(currentSlide);
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + dots.length) % dots.length;
    showSlide(currentSlide);
  }

  function startSlideshow() {
    slideInterval = setInterval(nextSlide, 6000); // Change slide every 6 seconds
  }

  function stopSlideshow() {
    clearInterval(slideInterval);
  }

  // Start slideshow
  startSlideshow();

  // Pause on hover for better UX
  const heroSection = document.querySelector('section.relative.h-screen');
  if (heroSection) {
    heroSection.addEventListener('mouseenter', stopSlideshow);
    heroSection.addEventListener('mouseleave', startSlideshow);

    // Touch support for mobile
    let touchStartX = 0;
    let touchEndX = 0;

    heroSection.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
      stopSlideshow();
    });

    heroSection.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > 50) { // Minimum swipe distance
        if (diff > 0) {
          nextSlide(); // Swipe left
        } else {
          prevSlide(); // Swipe right
        }
      }

      startSlideshow();
    });
  }
</script>
