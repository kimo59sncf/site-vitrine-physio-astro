---
import { Menu } from 'lucide-react';
const base = import.meta.env.BASE_URL;
---

<header id="header" class="sticky top-0 z-50 bg-medical-blue transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <div class="flex items-center">
      <a href={`${base}/`} class="flex items-center space-x-2 hover:opacity-80 transition-opacity">
        <img src={`${base}/images/logoPhysio.webp`} alt="PhysioKbNyon Logo" class="w-32 h-10 rounded-lg" />
        <span class="inline text-xl font-bold text-white">PhysioKbNyon</span>
      </a>
    </div>

    <ul class="hidden md:flex space-x-8 items-center">
      <li><a href="#services" class="text-white hover:text-medical-blue transition-colors font-medium">Services</a></li>
      <li><a href="#about" class="text-white hover:text-medical-blue transition-colors font-medium">À Propos</a></li>
      <li><a href="#contact" class="text-white hover:text-medical-blue transition-colors font-medium">Contact</a></li>
      <li>
        <a href="#booking" class="bg-white text-medical-blue px-6 py-2 rounded-lg hover:bg-gray-100 transition-colors font-medium">
          Prendre RDV
        </a>
      </li>
    </ul>

    <button class="md:hidden text-white hover:text-medical-blue transition-colors" id="mobile-menu-btn">
      <Menu size={24} />
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-medical-blue border-t border-medical-blue-dark">
    <ul class="flex flex-col space-y-4 px-4 py-4">
      <li><a href="#services" class="text-white hover:text-gray-100 transition-colors font-medium block">Services</a></li>
      <li><a href="#about" class="text-white hover:text-gray-100 transition-colors font-medium block">À Propos</a></li>
      <li><a href="#contact" class="text-white hover:text-gray-100 transition-colors font-medium block">Contact</a></li>
      <li>
        <a href="#booking" class="bg-white text-medical-blue px-6 py-2 rounded-lg hover:bg-gray-100 transition-colors font-medium block text-center">
          Prendre RDV
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const header = document.getElementById('header');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const navLinks = header.querySelectorAll('nav a:not(.bg-medical-blue)');
  const navButton = header.querySelector('nav button');

  // Handle scroll to change background and add border/shadow
  window.addEventListener('scroll', () => {
    const heroHeight = window.innerHeight;
    if (window.scrollY >= heroHeight) {
      // Past hero: opaque background with border and shadow
      header.classList.remove('bg-transparent');
      header.classList.add('bg-medical-blue', 'border-b', 'border-medical-blue-dark', 'shadow-sm');
    } else if (window.scrollY > 0) {
      // Scrolling over hero: transparent background
      header.classList.remove('bg-medical-blue', 'border-b', 'border-medical-blue-dark', 'shadow-sm');
      header.classList.add('bg-transparent');
    } else {
      // At top: opaque background
      header.classList.remove('bg-transparent', 'border-b', 'border-medical-blue-dark', 'shadow-sm');
      header.classList.add('bg-medical-blue');
    }
  });

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
</script>
