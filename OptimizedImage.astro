---
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'sync' | 'auto';
}

const {
  src,
  alt,
  width = 1200,
  height = 800,
  className = '',
  loading = 'lazy',
  decoding = 'async',
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={`object-cover ${className}`}
  loading={loading}
  decoding={decoding}
  style={{
    aspectRatio: `${width} / ${height}`,
  }}
/>
